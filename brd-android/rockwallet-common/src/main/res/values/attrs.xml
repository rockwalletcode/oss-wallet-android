<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RockWalletToolbar">
        <attr name="title" format="string" />
        <attr name="background"/>
        <attr name="tintColor" format="color" />
        <attr name="showBack" format="boolean" />
        <attr name="showInfo" format="boolean" />
        <attr name="showDismiss" format="boolean" />
        <attr name="titleType" format="enum">
            <enum name="none" value="0" />
            <enum name="small" value="1" />
            <enum name="large" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RockWalletSwitch">
        <attr name="leftOptionText" format="string" />
        <attr name="rightOptionText" format="string" />
        <attr name="selectedOption" format="enum">
            <enum name="none" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>
    
    <declare-styleable name="CurrencyInputView">
        <attr name="title" />
    </declare-styleable>
</resources>