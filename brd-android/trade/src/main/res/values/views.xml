<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TimerView.TextView" parent="">
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textColor">@color/light_secondary</item>
        <item name="android:textAppearance">@style/TextStyle.Body2</item>
    </style>

    <style name="AmountInput">
        <item name="android:background">@drawable/bg_amount_edittext</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:minEms">1</item>
        <item name="android:gravity">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AmountInput.Fiat">
        <item name="android:textAppearance">@style/TextStyle.Subtitle1</item>
    </style>

    <style name="AmountInput.Crypto">
        <item name="android:textAppearance">@style/TextStyle.Title5</item>
    </style>

    <style name="SwapDetails.Info.Title" parent="">
        <item name="android:textAppearance">@style/TextStyle.Body2</item>
        <item name="android:textColor">@color/light_text_02</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SwapDetails.Info.Value" parent="">
        <item name="android:textAppearance">@style/TextStyle.Subtitle2</item>
        <item name="android:textColor">@color/light_text_01</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SwapDetails.Info.Value.Tx">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:drawableEnd">@drawable/ic_copy</item>
    </style>
</resources>